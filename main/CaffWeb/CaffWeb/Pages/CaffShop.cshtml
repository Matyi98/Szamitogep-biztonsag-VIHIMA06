@page
@model CaffWeb.Pages.CaffShopModel
@{
    bool displayPager = 1 < (int)Math.Ceiling((double)Model.Caffs.TotalCount / (double)Model.Caffs.PageSize);
}

<div class="row">

    <div class="col-md-3">
        <form method="get" id="searchForm">
            <div class="form-group">
                <label asp-for="Specification.Creator">Creator</label>
                <input class="form-control" asp-for="Specification.Creator" />
            </div>
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Specification.CreationDateStart">CreatedStart</label>
                    <input class="form-control" asp-for="Specification.CreationDateStart" />
                </div>
                <div class="form-group">
                    <label asp-for="Specification.CreationDateEnd">CreatedEnd</label>
                    <input class="form-control" asp-for="Specification.CreationDateEnd" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Specification.Name">Name</label>
                <input class="form-control" asp-for="Specification.Name" />
            </div>
            <button class="btn btn-primary">
                Keresés
            </button>
        </form>
    </div>

    <div class="col-md-9">

        @if (displayPager) {
            <div class="mb-3">
                <vc:pager page-size="Model.Caffs.PageSize"
                          page-number="Model.Caffs.PageNumber"
                          pages-to-show="5"
                          total-count="Model.Caffs.TotalCount">
                </vc:pager>
            </div>
        }

        <partial name="_CaffTilesPartial" for="@Model.Caffs.Results" />

        @if (displayPager) {
            <div>
                <vc:pager page-size="Model.Caffs.PageSize"
                          page-number="Model.Caffs.PageNumber"
                          pages-to-show="5"
                          total-count="Model.Caffs.TotalCount">
                </vc:pager>
            </div>
        }

    </div>

</div>

